<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.MoreNews">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最新消息"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:layout_marginVertical="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:strokeWidth="1dp"
            android:id="@+id/newsBtn1"
            app:cardCornerRadius="5dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/black"
            app:strokeColor="@color/deepBlue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:id="@+id/text1"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:strokeWidth="1dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/newsBtn2"
            android:layout_marginRight="10dp"
            app:strokeColor="@color/deepBlue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全國賽"
                android:textColor="@color/black"
                android:id="@+id/text2"
                android:layout_gravity="center"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:strokeWidth="1dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/newsBtn3"
            android:layout_marginRight="10dp"
            app:strokeColor="@color/deepBlue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身障賽"
                android:textColor="@color/black"
                android:id="@+id/text3"
                android:layout_gravity="center"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:strokeWidth="1dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/newsBtn4"
            app:strokeColor="@color/deepBlue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="國際賽"
                android:textColor="@color/black"
                android:id="@+id/text4"
                android:layout_gravity="center"/>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:strokeWidth="1dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/newsBtn5"
            app:strokeColor="@color/deepBlue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="展能節"
                android:textColor="@color/black"
                android:id="@+id/text5"
                android:layout_gravity="center"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:strokeWidth="1dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/newsBtn6"
            android:layout_marginRight="10dp"
            app:strokeColor="@color/deepBlue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="達人盃"
                android:textColor="@color/black"
                android:id="@+id/text6"
                android:layout_gravity="center"/>
        </com.google.android.material.card.MaterialCardView>
        <View
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/lightGreen"
                android:paddingHorizontal="5dp"
                android:paddingVertical="5dp"
                android:id="@+id/newNews"
                android:visibility="invisible"
                android:text="新增消息"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/lightGreen"
                android:paddingHorizontal="5dp"
                android:paddingVertical="5dp"
                android:id="@+id/star"
                android:visibility="invisible"
                android:text="我的最愛"/>
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp"
        android:divider="@null"
        android:id="@+id/list"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/page"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"/>


</LinearLayout>