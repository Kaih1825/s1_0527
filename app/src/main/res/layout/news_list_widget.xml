<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.S1_0527.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_corner_bac"
    android:orientation="vertical"
    android:theme="@style/Theme.S1_0527.AppWidgetContainer">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/wsc_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:textColor="@color/deepBlue"
            android:textStyle="bold"
            android:text="我的票卷"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/deepBlue"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="日期"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/deepBlue"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="標題"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbarTrackVertical="@android:color/darker_gray"
        android:scrollbarThumbVertical="@color/deepBlue"
        android:fadeScrollbars="false"
        android:id="@+id/list"/>

</LinearLayout>