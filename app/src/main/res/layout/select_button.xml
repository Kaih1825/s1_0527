    android:layout_width="wrap_content"
    android:layout_height="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeWidth="1dp"
    android:layout_columnWeight="1"
    app:cardCornerRadius="5dp"
    android:id="@+id/btn"
    android:layout_marginRight="10dp"
